<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/lightblue" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="SHARE"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

    </RelativeLayout>
	
	   
   

    <Button
        android:id="@+id/buttonUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="127dp"
        android:text="Facebook" />


    
     
     <Button
         android:id="@+id/buttonUrl1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:layout_marginRight="60dp"
         android:layout_marginTop="129dp"
         android:text="Twitter" />

	<TextView
	    android:id="@+id/textView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/relativeLayout1"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="3dp"
	    android:text="Share our application with your friends"
	    android:textColor="@color/darkblue"
	    android:textSize="17sp" />

	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/relativeLayout1"
	    android:layout_below="@+id/relativeLayout1"
	    android:layout_marginTop="26dp"
	    android:text="You Can Connect with us on:"
	    android:textColor="@color/darkblue"
	    android:textSize="17sp" />

	<Button
	    android:id="@+id/button1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/buttonUrl"
	    android:layout_below="@+id/textView3"
	    android:layout_marginTop="21dp"
	    android:text="Send an Email" />

	<TextView
	    android:id="@+id/textView4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/textView3"
	    android:layout_below="@+id/button1"
	    android:layout_marginTop="27dp"
	    android:text="Feedback"
	    android:textColor="@color/darkblue"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<Button
	    android:id="@+id/button2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/buttonUrl"
	    android:layout_below="@+id/textView4"
	    android:layout_marginTop="17dp"
	    android:text="Email us" />

	<RelativeLayout
	    android:id="@+id/rl2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/button2"
	    android:layout_marginTop="17dp"
	    android:background="@color/white" >
        	
	</RelativeLayout>

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_alignRight="@+id/textView3"
	    android:layout_below="@+id/button2"
	    android:contentDescription="5ylogo"
	    android:src="@drawable/logo" />

</RelativeLayout>